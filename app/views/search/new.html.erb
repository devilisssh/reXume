<div class="container search">
  <div class="row">
    <div class="col s12">
      <%= form_tag( search_results_path, method: 'get', html: { class: 'row' }) do %>
        <div class="row">
          <%= text_field_tag "query", nil, :placeholder => "Search", class: 'row input-field center' %>
        </div>
        <div class="row">
          <%= submit_tag "Search", class: 'btn btn-large col s4 offset-s4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>